{
  "name": "pouchdb",
  "release": "nightly",
  "description": "PouchDB is a pocket-sized database.",
  "author": "Dale Harvey",
  "version": "0.0.0",
  "main": "./src/pouch.js",
  "homepage": "https://github.com/daleharvey/pouchdb",
  "repository": "https://github.com/daleharvey/pouchdb",
  "keywords": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "tags": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "dependencies": {
    "level": "*",
    "request": "*"
  },
  "jam": {
    "main": "dist/pouchdb.amd-nightly.js",
    "include": [
      "dist/pouchdb.amd-nightly.js",
      "README.md",
      "LICENSE"
    ],
    "dependencies": {
      "simple-uuid": null,
      "md5": null
    }
  },
  "devDependencies": {
    "wd": "*",
    "commander": "*",
    "colors": "*",
    "assert": "*",
    "nano": "*",
    "send": "*",
    "grunt": "~0.4",
    "grunt-saucelabs": "~4.0",
    "grunt-node-qunit": "~2.0",
    "corsproxy": "*",
    "http-proxy": "*",
    "grunt-contrib-connect": "~0.1.2",
    "grunt-contrib-concat": "~0.1.3",
    "grunt-contrib-uglify": "~0.1.1",
    "grunt-contrib-jshint": "~0.1.1",
    "grunt-contrib-clean": "~0.4.0",
    "grunt-contrib-watch": "~0.2.0"
  },
  "maintainers": [
    {
      "name": "Dale Harvey",
      "web": "https://github.com/daleharvey"
    },
    {
      "name": "Ryan Ramage",
      "web": "https://github.com/ryanramage"
    }
  ],
  "scripts": {
    "jshint": "jshint -c .jshintrc src/*.js src/adapters/*.js tests/*.js",
    "build-js": "browserify src/pouch.js -i ./adapters/pouch.leveldb.js -i ./deps/buffer > dist/pouchdb-nightly.js",
    "uglify": "uglifyjs dist/pouchdb-nightly.js -mc > dist/pouchdb-nightly.min.js",
    "build": "mkdir -p dist && npm run build-js && npm run uglify",
    "test-node": "./bin/test-node.js",
    "test": "npm run jshint"
  },
  "browser": {
    "request": false,
    "./adapters/pouch.leveldb.js": false,
    "level": false,
    "path": false,
    "fs": false,
    "events": false,
    "crypto": false
  }
}
